---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<img class='top-image index' src="/images/escape-sequences-a-quick-guide.png">

<% page_articles.each_with_index do |article, i| %>
  <article class='listing'>
    <h1><%= article.title %></h1>
    <%= article.summary(250) %>
    
    <%= link_to "Continue reading &#10230;", article %>
  </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

